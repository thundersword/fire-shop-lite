page {
  height: 100%;
  background-color: #fff;
}

.topic-cat{
	height: 290rpx;
	width: 100%;
	padding: 30rpx;
	white-space: nowrap;
}
.topic-cat .item{
	width: 230rpx;
	height: 230rpx;
	margin-right: 30rpx ;
	position: relative;
	display: inline-block;
}
.topic-cat .item .thumb{
	height: 100%;
	width: 100%;
}
.topic-cat .item .thumb .img{
	height: 100%;
	width: 100%;
	display: block;
}
.topic-cat .item .name{
	position: absolute;
	bottom: 0;
	left: 0;
	height: 60rpx;
	line-height: 60rpx;
	width: 100%;
	background: rgba(0,0,0,.85);
	color: #fff;
	z-index: 9;
}

.topic-contents {
  width: 100%;
  background-color: #fff;
  padding-top: 10px;
  border-top: 10px solid #f5f5f5;
}

.topic-content-list {
  background-color: #fff;
  position: relative;
  width: 96%;
  margin: 0 auto;
  margin-bottom: 10px;
}

.content-images {
  width: 100%;
  display: block;
}

.content-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color: #000;
  opacity: 0.4;
}

.content-text {
  position: absolute;
  top: 25%;
  width: 100%;
  text-align: center;
  color: #fff;
}

.content-title {
  font-size: 40rpx;
  padding-bottom: 10px;
}

.content-subtitle {
  font-size: 30rpx;
  padding-bottom: 15px;
}

.content-button {
  border: 1px solid #fff;
  width: 80px;
  font-size: 24rpx;
  margin: 0 auto;
  border-radius: 20px;
  padding: 4px 0;
}

.no-more-goods {
  text-align: center;
  margin-top: 20%;
}

.no-order-img {
  width: 110px;
  height: 110px;
}

.no-more-goods .text {
  font-size: 28rpx;
  color: #999;
  margin-top: -5px;
}
